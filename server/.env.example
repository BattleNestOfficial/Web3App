PORT=4000

# PostgreSQL
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=mint_tracker
# Optional alternative:
# DATABASE_URL=postgresql://user:password@host:5432/database

# Firebase Admin
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Notification retry policy
NOTIFICATION_MAX_RETRIES=5
NOTIFICATION_RETRY_BASE_SECONDS=60

# Web Push
WEB_PUSH_VAPID_SUBJECT=mailto:alerts@example.com
WEB_PUSH_VAPID_PUBLIC_KEY=your-web-push-public-key
WEB_PUSH_VAPID_PRIVATE_KEY=your-web-push-private-key
# JSON array of PushSubscription objects
WEB_PUSH_SUBSCRIPTIONS_JSON=[]

# Brevo Email
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_EMAIL=alerts@example.com
BREVO_SENDER_NAME=Mint Tracker
BREVO_RECIPIENT_EMAIL=owner@example.com
BREVO_RECIPIENT_NAME=Operator

# Twitter / X Alpha Feed
TWITTER_BEARER_TOKEN=your-twitter-api-bearer-token
TWITTER_TRACKED_ACCOUNTS=debankdefi,LayerZero_Core,arbitrum
TWITTER_KEYWORDS=mint,testnet,airdrop
TWITTER_FETCH_LIMIT=25
TWITTER_REQUEST_TIMEOUT_MS=15000

# AI Service (optional; falls back to heuristics when missing)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_REQUEST_TIMEOUT_MS=20000

# Wallet Tracker (OpenSea)
WALLET_TRACKER_ENABLED=true
WALLET_TRACKER_PROVIDER=opensea
WALLET_TRACKER_POLL_INTERVAL_SECONDS=60
WALLET_TRACKER_LOOKBACK_MINUTES=60
WALLET_TRACKER_MAX_EVENTS_PER_WALLET=50
WALLET_TRACKER_REQUEST_TIMEOUT_MS=15000
OPENSEA_API_BASE_URL=https://api.opensea.io/api/v2
OPENSEA_API_KEY=your-opensea-api-key
MAGICEDEN_API_BASE_URL=https://api-mainnet.magiceden.dev
# Optional; free usage available with lower limits
MAGICEDEN_API_KEY=
MAGICEDEN_EVM_CHAIN=ethereum

# Automation Workflows (UTC schedule)
AUTOMATION_PAY_PER_USE_ENABLED=false
AUTOMATION_CURRENCY=USD
AUTOMATION_DEFAULT_BALANCE_CENTS=0
AUTOMATION_PRICE_DAILY_BRIEFING_CENTS=100
AUTOMATION_PRICE_TODO_DAILY_DIGEST_CENTS=40
AUTOMATION_PRICE_MISSED_TASK_ALERT_CENTS=60
AUTOMATION_PRICE_INACTIVE_FARMING_ALERT_CENTS=60
AUTOMATION_PRICE_WEEKLY_REPORT_CENTS=180
AUTOMATION_DAILY_BRIEFING_HOUR_UTC=8
AUTOMATION_TODO_DIGEST_MORNING_HOUR_UTC=3
AUTOMATION_TODO_DIGEST_NIGHT_HOUR_UTC=15
AUTOMATION_WEEKLY_REPORT_DAY_UTC=1
AUTOMATION_WEEKLY_REPORT_HOUR_UTC=8
AUTOMATION_INACTIVE_FARMING_DAYS=3
AUTOMATION_MISSED_TASK_LOOKBACK_HOURS=24

# API Cost Tracking (USD by default)
API_COST_DEFAULT_CURRENCY=USD
API_COST_OPENAI_INPUT_PER_1K_USD=0.00015
API_COST_OPENAI_OUTPUT_PER_1K_USD=0.0006
API_COST_TWITTER_REQUEST_USD=0
API_COST_BREVO_EMAIL_USD=0
API_COST_OPENSEA_REQUEST_USD=0
API_COST_MAGICEDEN_REQUEST_USD=0
API_COST_GENERIC_REQUEST_USD=0
